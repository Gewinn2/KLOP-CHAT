{
  "openapi": "3.0.0",
  "info": {
    "title": "KLOP CHAT",
    "version": "v1",
    "contact": {
      "name": "CKOP CHAT API"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/sign-up":{
      "post": {
        "tags": [
          "USER"
        ],
        "summary": "Регистрация",
        "operationId": "UserRegistration",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses":{
          "200": {
            "description": "Регистрация прошла успешно",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/sign-in":{
      "post": {
        "tags": [
          "USER"
        ],
        "summary": "Aутентификация",
        "operationId": "UserAuthentification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserAuth"
              }
            }
          }
        },
        "responses":{
          "200": {
            "description": "Регистрация прошла успешно",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserAuth"
                }
              }
            }
          }
        }
      }
    },
    "/auth/chat":{
      "get": {
        "security": [
          {                  "UserAuth": []
          }
        ],
        "tags": [
          "CHAT"
        ],
        "summary": "Получения всех чатов пользователя",
        "responses":{
          "200": {
            "description": "Успешный ответ",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chat_id": {
                      "type": "string",
                      "example": "1"
                    },
                    "participants_id": {
                      "type": "array",
                      "items": {
                        "type": "integer",
                        "example": 1
                      },
                      "example": [1, 2, 3]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "security": [
          {                  "UserAuth": []
          }
        ],
        "tags": [
          "CHAT"
        ],
        "summary": "Создание чата",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Клопы"
                  },
                  "photo": {
                    "type": "string",
                    "example": "https://www.zastavki.com/pictures/originals/2018Animals___Cats_Large_gray_cat_with_a_surprised_look_123712_.jpg"
                  },
                  "user_id_arr": {
                    "type": "array",
                    "items": {
                      "type": "integer",
                      "example": 1
                    },
                    "example": [2, 3]
                  }
                }
              }
            }
          }
        },
        "responses":{
          "200": {
            "description": "Чат создан",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chat_id": {
                      "type": "string",
                      "example": "1"
                    },
                    "participants_id": {
                      "type": "array",
                      "items": {
                        "type": "integer",
                        "example": 1
                      },
                      "example": [1, 2, 3]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "security": [
          {                  "UserAuth": []
          }
        ],
        "tags": [
          "CHAT"
        ],
        "summary": "Редактирование названия и фото чата",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses":{
          "200": {
            "description": "Чат изменен",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserAuth"
                }
              }
            }
          }
        }
      },
      "delete": {
        "security": [
          {                  "UserAuth": []
          }
        ],
        "tags": [
          "CHAT"
        ],
        "summary": "Удаление чата",
        "responses":{
          "200": {
            "description": "Чат удален",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserAuth"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "UserAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "vanek"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "ivanovivan@yandex.ru"
          },
          "password": {
            "type": "string",
            "example": "qwerty1234"
          },
          "photo": {
            "type": "string",
            "example": "https://gas-kvas.com/grafic/uploads/posts/2023-09/1695826313_gas-kvas-com-p-kartinki-s-kotikami-1.jpg"
          }
        }
      },
      "UserAuth": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "ivanovivan@yandex.ru"
          },
          "password": {
            "type": "string",
            "example": "qwerty1234"
          }
        }
      },
      "JWT": {
        "type": "string",
        "example": "nqhbdqLKVWLBlbaddwvad.advIdwkvdkavdvauvdw.davgjdvadvamddmvgad"
      }
    }
  }
}
